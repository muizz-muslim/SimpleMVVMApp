<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- DARK THEME COLORS -->
    <Color x:Key="BackgroundColor">#1E1E1E</Color>
    <Color x:Key="CardColor">#2C2C2C</Color>
    <Color x:Key="TextColor">#FFFFFF</Color>
    <Color x:Key="AccentColor">#BB86FC</Color>
    <Color x:Key="ButtonColor">#3C3C3C</Color>

    <!-- BRUSHES -->
    <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource BackgroundColor}" />
    <SolidColorBrush x:Key="CardBrush" Color="{StaticResource CardColor}" />
    <SolidColorBrush x:Key="TextBrush" Color="{StaticResource TextColor}" />
    <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentColor}" />
    <SolidColorBrush x:Key="ButtonBrush" Color="{StaticResource ButtonColor}" />
</ResourceDictionary>
