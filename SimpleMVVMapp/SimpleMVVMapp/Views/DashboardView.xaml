<UserControl x:Class="SimpleMVVMApp.Views.DashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid Background="{DynamicResource BackgroundBrush}" Margin="20">
        <StackPanel>
            <TextBlock Text="📊 Dashboard Analytics"
                       FontSize="24" FontWeight="Bold"
                       Foreground="{DynamicResource TextBrush}" Margin="0,0,0,20"/>

            <UniformGrid Columns="2" Rows="2" Margin="0,0,0,20">
                <Border Background="{DynamicResource CardBrush}" CornerRadius="8" Padding="10" Margin="5">
                    <StackPanel>
                        <TextBlock Text="Total People" FontWeight="Bold"/>
                        <TextBlock Text="{Binding TotalPeople}" FontSize="22"/>
                    </StackPanel>
                </Border>
                <Border Background="{DynamicResource CardBrush}" CornerRadius="8" Padding="10" Margin="5">
                    <StackPanel>
                        <TextBlock Text="Average Age" FontWeight="Bold"/>
                        <TextBlock Text="{Binding AverageAge}" FontSize="22"/>
                    </StackPanel>
                </Border>
                <Border Background="{DynamicResource CardBrush}" CornerRadius="8" Padding="10" Margin="5">
                    <StackPanel>
                        <TextBlock Text="Oldest Age" FontWeight="Bold"/>
                        <TextBlock Text="{Binding OldestAge}" FontSize="22"/>
                    </StackPanel>
                </Border>
                <Border Background="{DynamicResource CardBrush}" CornerRadius="8" Padding="10" Margin="5">
                    <StackPanel>
                        <TextBlock Text="Youngest Age" FontWeight="Bold"/>
                        <TextBlock Text="{Binding YoungestAge}" FontSize="22"/>
                    </StackPanel>
                </Border>
            </UniformGrid>

            <TextBlock Text="Age Distribution" FontWeight="Bold" Margin="0,0,0,10"/>
            <ItemsControl ItemsSource="{Binding AgeDistribution}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal" Margin="0,3">
                            <TextBlock Text="{Binding Key}" Width="40"/>
                            <ProgressBar Value="{Binding Value, Mode=OneWay}" Maximum="100"
                                         Width="200" Height="10"
                                         Foreground="{DynamicResource AccentBrush}"/>
                            <TextBlock Text="{Binding Value}" Width="40" HorizontalAlignment="Right"/>
                        </StackPanel>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </StackPanel>
    </Grid>
</UserControl>
