<Window x:Class="SimpleMVVMApp.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:SimpleMVVMApp.Views"
        Title="Simple MVVM App (Experimental Branch)"
        Height="600" Width="750"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource BackgroundBrush}"
        Foreground="{DynamicResource TextBrush}">

    <DockPanel>
        <!-- 🧭 Navigation Bar -->
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Top"
                    Background="{DynamicResource CardBrush}" Margin="10">
            <Button Content="🏠 Home"
                    Width="100" Height="30" Margin="0,0,10,0"
                    Click="HomeButton_Click"
                    Background="#2196F3" Foreground="White" FontWeight="SemiBold"/>
            <Button Content="📊 Dashboard"
                    Width="100" Height="30" Margin="0,0,10,0"
                    Click="DashboardButton_Click"
                    Background="#9C27B0" Foreground="White" FontWeight="SemiBold"/>
            <Button Content="⚙️ Settings"
                    Width="100" Height="30"
                    Click="SettingsButton_Click"
                    Background="#FFC107" Foreground="Black" FontWeight="SemiBold"/>

            <ToggleButton x:Name="ThemeToggle"
                          Content="🌙 Dark Mode"
                          Width="120" Height="30"
                          HorizontalAlignment="Right"
                          Margin="0,0,0,0"
                          Checked="ThemeToggle_Checked"
                          Unchecked="ThemeToggle_Unchecked"/>
        </StackPanel>

        <!-- 📦 Main Page Frame -->
        <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden"/>
    </DockPanel>
</Window>
