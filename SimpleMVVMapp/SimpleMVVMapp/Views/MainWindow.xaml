<Window x:Class="SimpleMVVMApp.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MVVM Example" Height="350" Width="525">

    <Grid Margin="10">
        <StackPanel>
            <!-- Name Input -->
            <TextBlock Text="Name:" FontWeight="Bold" />
            <TextBox Width="200" Margin="0,0,0,10"
                 Text="{Binding NewName, UpdateSourceTrigger=PropertyChanged}" />

            <!-- Age Input -->
            <TextBlock Text="Age:" FontWeight="Bold" />
            <TextBox Width="200" Margin="0,0,0,10"
                 Text="{Binding NewAge, UpdateSourceTrigger=PropertyChanged}" />

            <!-- Add Button -->
            <Button Content="Add Person"
                Width="120"
                Command="{Binding AddPersonCommand}" />

            <!-- People List -->
            <ListBox ItemsSource="{Binding People}" Margin="0,10,0,0">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal" Margin="0,5">
                            <StackPanel Width="200">
                                <TextBlock Text="{Binding Name}" FontSize="16"/>
                                <TextBlock Text="{Binding Age}" FontSize="12" Foreground="Gray"/>
                            </StackPanel>

                            <!-- Delete button -->
                            <Button Content="Delete"
                        Command="{Binding DataContext.DeletePersonCommand, RelativeSource={RelativeSource AncestorType=ListBox}}"
                        CommandParameter="{Binding}"
                        Width="60"
                        Margin="10,0,0,0"/>
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </StackPanel>
    </Grid>
</Window>
